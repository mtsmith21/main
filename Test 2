              <TableHead>Headquarters</TableHead>
              <TableHead className="hidden md:table-cell">Reviews</TableHead>
              <TableHead>
                <span className="sr-only">Actions</span>
              </TableHead>
            </TableRow>
          </TableHeader>
          <TableBody>
